<?xml version="1.0" encoding="utf-8" ?>
<OspSystemStructure xmlns="http://opensimulationplatform.com/MSMI/OSPSystemStructure">
  <StartTime>0.0</StartTime>
  <BaseStepSize>1e-4</BaseStepSize>
  <Algorithm>fixedStep</Algorithm>
  <Simulators>
    <Simulator name="Simulator_1" source="./path/to/simulator.fmu" stepSize="1">
      <InitialValues>
        <InitialValue variable="x">
          <Real value="1.4"/>
        </InitialValue>
        <InitialValue variable="y">
          <Real value="42"/>
        </InitialValue>
      </InitialValues>
    </Simulator>
    <Simulator name="Simulator_2" source="./path/to/simulator.fmu" stepSize="2">
      <InitialValues>
        <InitialValue variable="x">
          <Real value="3.17"/>
        </InitialValue>
        <InitialValue variable="y">
          <Real value="7.21"/>
        </InitialValue>
      </InitialValues>
    </Simulator>
