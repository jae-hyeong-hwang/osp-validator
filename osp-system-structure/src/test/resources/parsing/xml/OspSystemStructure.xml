  <VariableConnections>
    <ScalarConnection>
      <Source simulator="Simulator_1" endpoint="o_variable_1"/>
      <Target simulator="Simulator_2" endpoint="i_variable_1"/>
    </ScalarConnection>
  </VariableConnections>
